    <link rel="stylesheet" href="./stylesheets/style.css" />
    <title>Countdown Timer</title>
  </head>
  <body>
      <div class="visitor">Total visitors: <%= viewCount %> </div>
    <div class="banner">
    <div class="text">Countdown Timer</div>
  </div>
    <div id="container">
      <p id="hour-label" class="label">Hours</p>
      <p id="min-label" class="label">Minutes</p>
      <p id="sec-label" class="label">Seconds</p>
      <input type="number" id="hour" max="99" min="0" class="time" />
      <p class="semicolon" id="p1">:</p>
      <input type="number" id="minute" max="59" min="0" class="time" />
      <p class="semicolon" id="p2">:</p>
      <input type="number" id="sec" max="59" min="0" class="time" />

      <button class="btn" id="start">Start</button>
      <button class="btn" id="reset">Reset</button>
    </div>

    <script src="./javascripts/script.js"></script>
  </body>
</html>
